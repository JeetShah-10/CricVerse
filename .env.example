# CricVerse Environment Configuration
# Copy this file to .env and update with your actual values

# Required Settings
SECRET_KEY=cricverse-production-secret-key-change-this-to-something-secure-and-random

# Database Configuration (PostgreSQL recommended for production)
# For local development, you can use SQLite by commenting out DATABASE_URL
DATABASE_URL=postgresql://postgres:admin@localhost:5432/cricverse_db

# Alternative SQLite for local development
# DATABASE_URL=sqlite:///cricverse.db

# Payment Gateway Configuration (Optional)
# PayPal Settings
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# Razorpay Settings (for Indian payments)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# AI Integration (Optional)
# OpenAI API for enhanced chatbot
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API for AI features
GOOGLE_API_KEY=your_google_api_key_here

# Email Configuration (Optional)
# SendGrid for email notifications
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@cricverse.com

# SMS Configuration (Optional)
# Twilio for SMS notifications
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Redis Configuration (Optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Security Settings (Optional)
ENCRYPTION_KEY=your_32_character_encryption_key_here
CSRF_SECRET_KEY=your_csrf_secret_key_here

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=True

# Logging
LOG_LEVEL=INFO