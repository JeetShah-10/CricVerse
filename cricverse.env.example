# CricVerse Production Configuration
# Copy this file to cricverse.env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-super-secret-key-here
FLASK_ENV=production
DEBUG=False

# Supabase PostgreSQL Database (Production)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres
SUPABASE_URL=https://[project-ref].supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Local PostgreSQL (Development - Fallback)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-local-postgres-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=stadium_db

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# OpenAI GPT-4 Configuration
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-1106-preview

# Email Notifications (SendGrid)
SENDGRID_API_KEY=SG...
FROM_EMAIL=noreply@cricverse.com
FROM_NAME=CricVerse

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1...

# Redis (for caching and real-time features)
REDIS_URL=redis://localhost:6379/0

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key
ENCRYPTION_KEY=your-32-character-encryption-key

# Application URLs
BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=static/uploads

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/cricverse.log